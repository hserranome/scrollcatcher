{
    "manifest_version": 3,
    "name": "Scroll Break Reminder",
    "version": "1.0",
    "description": "Reminds you to take a break after a certain number of scrolls.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/0.jpg",
                "assets/1.jpg",
                "assets/2.jpg"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
